@model IEnumerable<hr_jide.Models.CompanyInformation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>



<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
               Organization Name
            </th>
            <th scope="col">
              Tax Id
            </th>
            <th scope="col">
               Number of Employees
            </th>
            <th scope="col">
              Registration Number
            </th>
           
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganizationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfEmployees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
           
                
                <td>
                    <a class="btn btn-primary btn-group-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary btn-group-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
